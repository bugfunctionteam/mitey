{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:import/recommended",
    "plugin:import/typescript",
    "plugin:@typescript-eslint/recommended",
    "next/core-web-vitals",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ], 
  "settings": {
    "import/resolver": {
      "typescript": true,
      "node": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest": true,
    "node": true
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "eqeqeq": ["error", "always", { "null": "never" }],
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "import/no-default-export": "error",
    "jest/valid-title": ["error", { "ignoreTypeOfDescribeName": true }],
    "react/react-in-jsx-scope": "off", 
    "react/jsx-boolean-value": "error",
    "react/prop-types": "off", // https://stackoverflow.com/a/54690878/2573621
    "react-hooks/exhaustive-deps": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "h" // Preact's JSX pragma
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "next.config.js",
        "codegen.swagger.js",
        "src/utils/tracer.js"
      ],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    },
    {
      "files": [
        "src/pages/**/*.ts?(x)",
        "setupTestEnvVars.ts"
      ],
      "rules": {
        // Next js requires default exports (https://nextjs.org/docs/api-routes/introduction)
        "import/no-default-export": "off",
        "import/no-anonymous-default-export": "off"
      }
    },
    {
      "files": ["**/__tests__/**/*.ts?(x)", "**/?(*.)+(test).ts?(x)"],
      "extends": [
        "plugin:jest/recommended",
        "plugin:jest/style",
        "plugin:jest-dom/recommended",
        "plugin:testing-library/react"
      ]
    }
  ]
}
{
  "swagger":"2.0",
  "name": "kong",
  "info":{
    "description":"Oauth2 Kong Spec",
    "version":"1.0.0",
    "title":"Oauth2 Kong Spec",
    "contact":{
      "name":"NAME",
      "email":"kyle.williams+swagger@altruist.com"
    },
    "license":{
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "basePath":"https://localhost:8443",
  "tags":[
    {
      "name":"authorize-controller",
      "description":"Authorize Controller"
    },
    {
      "name":"authenticate-controller",
      "description":"Authenticate Controller"
    }
  ],
  "paths":{
    "integrationmanagement/oauth2":{
      "get":{
        "tags":[
          "authorize-controller"
        ],
        "summary":"getAuthorizationByClientId",
        "operationId":"getAuthorizationByClientIdUsingGET",
        "produces":[
          "*/*"
        ],
        "parameters":[
          {
            "name":"client_id",
            "in":"query",
            "description":"client_id",
            "type":"string",
            "format":"uuid"
          }
        ],
        "responses":{
          "200":{
            "description":"OK",
            "schema":{
              "$ref":"#/definitions/Authorize"
            }
          },
          "401":{
            "description":"Unauthorized"
          },
          "403":{
            "description":"Forbidden"
          },
          "404":{
            "description":"Not Found"
          }
        },
        "deprecated":false
      },
      "post":{
        "tags":[
          "authorize-controller"
        ],
        "summary":"getAuthorizationByClientId",
        "operationId":"getAuthorizationByClientIdUsingPOST",
        "produces":[
          "*/*"
        ],
        "parameters":[
          {
            "name": "body",
            "description": "body",
            "in":"body",
            "required":true,
            "schema":{
              "$ref":"#/definitions/AuthorizeRequestBody"
            }
          }
        ],
        "responses":{
          "200":{
            "description":"OK",
            "schema":{
              "$ref":"#/definitions/Authorize"
            }
          },
          "401":{
            "description":"Unauthorized"
          },
          "403":{
            "description":"Forbidden"
          },
          "404":{
            "description":"Not Found"
          }
        },
        "deprecated":false
      }
    },
    "/idp/oauth/token":{
      "post":{
        "tags":[
          "authenticate-controller"
        ],
        "summary":"getAuthentication",
        "consumes": ["application/x-www-form-urlencoded"],
        "operationId":"getAuthenticationUsingPOST",
        "produces":[
          "*/*"
        ],
        "parameters":[
          {
            "name":"username",
            "in":"query",
            "description":"username",
            "type":"string",
            "format":"uuid"
          },
          {
            "name":"password",
            "in":"query",
            "description":"password",
            "type":"string"
          },
          {
            "name":"grant_type",
            "in":"query",
            "description":"grant_type",
            "type":"string"
          }
        ],
        "responses":{
          "200":{
            "description":"OK",
            "schema":{
              "$ref":"#/definitions/Authenticate"
            }
          },
          "401":{
            "description":"Unauthorized"
          },
          "403":{
            "description":"Forbidden"
          },
          "404":{
            "description":"Not Found"
          }
        },
        "deprecated":false
      }
    },
    "/idp/oauth2/token/introspect":{
      "get":{
        "tags":[
          "authenticate-controller"
        ],
        "summary":"getAuthentication",
        "operationId":"getTokenInfoUsingGET",
        "produces":[
          "*/*"
        ],
        "parameters":[{
          "name": "Authorization",
          "description": "token",
          "in":"header",
          "required":true,
          "schema":{
            "type":"string"
          }
        }],
        "responses":{
          "200":{
            "description":"OK",
            "schema":{
              "$ref":"#/definitions/TokenInfo"
            }
          },
          "401":{
            "description":"Unauthorized",
            "schema": {
              "$ref": "#/definitions/DefaultError"
            }
          },
          "403":{
            "description":"Forbidden"
          },
          "404":{
            "description":"Not Found"
          }
        },
        "deprecated":false
      }
    }
  },
  "definitions":{
    "Authorize": {
      "type": "object",
      "properties": {
        "next": {
          "type": "string",
          "nullable": true
        },
        "data":{
          "type":"array",
          "items":{
            "$ref":"#/definitions/AuthorizeData"
          },
          "required": true
        }
      },
      "required": ["next", "data"],
      "title": "Authorize"
    },
    "AuthorizeData":{
      "type":"object",
      "properties":{
        "id": {
          "type":"string"
        },
        "name": {
          "type":"string"
        },
        "redirect_uris": {
          "type":"array",
          "items": {
            "type":"string"
          }
        },
        "consumer": {
          "type":"object",
          "properties": {
            "id": {
              "type":"string"
            }
          },
          "required": ["id"]
        },
        "tags": {
          "type":"array",
          "items": {
            "type":"string"
          },
          "required": false,
          "nullable": true
        },
        "client_secret": {
          "type":"string"
        },
        "client_id": {
          "type":"string"
        },
        "hash_secret": {
          "type":"boolean"
        },
        "client_type": {
          "type":"string"
        },
        "created_at": {
          "type":"integer"
        }
      },
      "required": [
        "id",
        "name",
        "redirect_uris",
        "consumer",
        "tags",
        "client_secret",
        "client_id",
        "hash_secret",
        "client_type",
        "created_at"
      ],
      "title":"AuthorizeData"
    },
    "Authenticate":{
      "type":"object",
      "properties":{
        "access_token": {
          "type":"string"
        },
        "token_type": {
          "type":"string"
        },
        "expires_in": {
          "type":"integer"
        },
        "scope": {
          "type":"string"
        },
        "jti": {
          "type":"string"
        }
      },
      "required": [
        "access_token", "token_type", "expires_in", "scope", "jti"
      ],
      "title":"Authenticate"
    },
    "AuthenticateRequestBody" : {
      "type":"object",
      "properties":{
        "username": {
          "type":"string",
          "format": "uuid"
        },
        "password": {
          "type":"string"
        },
        "grant_type": {
          "type":"string"
        }
      },
      "required": ["username", "password", "grant_type"],
      "title":"AuthenticateRequestBody"
    },
    "AuthorizeRequestBody": {
      "type": "object",
      "properties": {
        "client_id": {
          "type":"string",
          "format":"uuid"
        },
        "scope": {
          "type":"string"
        },
        "redirect_uri": {
          "type":"string",
          "format":"uri"
        },
        "state": {
          "type":"string"
        }
      },
      "title":"AuthorizeRequestBody"
    },
    "TokenInfo": {
      "type": "object",
      "properties": {
        "user_name": {
          "type": "string"
        },
        "orgId": {
          "type": "string",
          "format": "uuid"
        },
        "scope": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      },
      "required": ["message"],
      "title":"TokenInfo"
    },
    "DefaultError": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string"
        },
        "error_description": {
          "type": "string"
        }
      },
      "title":"DefaultError"
    }
  }
}